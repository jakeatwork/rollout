<div class="container">

<h1><%= @client.name %></h1>

<p>
  <strong>Kickoff Date:</strong>
  <%= @client.kickoff_date %>
  
</p>

<p>
  <strong>Launch Date:</strong>
  <%= @client.launch_date %>
  
</p>

<p>
  <strong>Billing Start Date:</strong>
  <%= @client.billing_start_date %>
</p>

<p>
  <strong>Division:</strong>
  <%= @client.division.name %>
</p>

<p>
  <strong>Ticketing Provider:</strong>
  <%= @client.ticketing_provider %>
</p>

<p>
  <strong>Internal?:</strong>
  <%= @client.internal %>
</p>

<p>
  <strong>Price:</strong>
  <%= @client.price.name  %> at $<%= @client.price.cost %> per month
</p>

<p>
  <strong>Region:</strong>
  <%= @client.region %>
</p>

<p style="white-space: pre-wrap;">
  <strong>Notes:</strong>
  <%= @client.notes %>
</p>

<% if can? :destroy, @client %>
<p>
  <strong>Delete Client:</strong>
<%= link_to 'Destroy', @client, method: :delete, data: { confirm: 'Are you sure?' } %>
</p>
<% end %>


<% if can? :edit, @client %>
<%= link_to 'Edit', edit_client_path(@client) %> |
<% end %>
<%= link_to 'Back', clients_path %>
</div>