<h1>Listing clients</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Division</th>
      <th>Region</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= link_to "#{client.name}", client %></td>
        <td><%= client.division %></td>
        <td><%= client.region %></td>
        <td>
        <div class="btn-group">
        <button type="button" class="btn btn-default">
        <%= link_to '<span class="glyphicon glyphicon-eye-open"></span>' .html_safe, client %>
        </button>
        <button type="button" class="btn btn-default">
        <%= link_to '<span class="glyphicon glyphicon-edit"></span>' .html_safe, edit_client_path(client) %>
        </button>
        <button type="button" class="btn btn-default">
        <%= link_to '<span class="glyphicon glyphicon-trash"></span>' .html_safe, client, method: :delete, data: { confirm: 'Are you sure?' } %>
        </button>
        </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Client', new_client_path %>
